<Window x:Class="Frontend.Views.formLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Frontend.Views"
        mc:Ignorable="d"
        Title="Авторизация" 
        Height="474" 
        Width="452"
        WindowStartupLocation="CenterScreen"
        Background="LightSeaGreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Closing="Window_Closing"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Border CornerRadius="10" 
            Background="White" 
            Margin="39,27" 
            Padding="0">
        <Grid>


            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Кнопка закрытия -->
            <Button x:Name="btnClose"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,10,10,0"
                    Width="30"
                    Height="30"
                    Background="Transparent"
                    BorderThickness="0"
                    FontSize="16"
                    Foreground="Black"
                    Click="BtnClose_Click"
                    Content="✕"/>


            <!-- Остальные элементы -->
            <Label Grid.Row="0" 
                   Content="Вход в систему" 
                   FontSize="18" 
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,20,0,30"/>

            <!-- Поля формы -->
            <Label Grid.Row="1" 
                   Content="Логин:" 
                   FontSize="14" 
                   FontWeight="SemiBold"
                   Margin="20,0,0,5"/>

            <TextBox Grid.Row="2" 
                     x:Name="txtUsername" 
                     FontSize="14"
                     FontWeight="SemiBold"
                     Margin="20,0,20,20"
                     Height="30"/>

            <Label Grid.Row="3" 
                   Content="Пароль:" 
                   FontSize="14" 
                   FontWeight="SemiBold"
                   Margin="20,0,0,5"/>

            <PasswordBox Grid.Row="4" 
                     x:Name="txtPassword" 
                     FontSize="14"
                     FontWeight="SemiBold"
                     Margin="20,0,20,5"
                     Height="30"/>

            <Label Grid.Row="6" 
                   Content="Тип пользователя:" 
                   FontSize="14" 
                   FontWeight="SemiBold"
                   Margin="20,0,0,5"/>

            <ComboBox Grid.Row="7" 
                      x:Name="cmbUserType" 
                      FontSize="14"
                      FontWeight="SemiBold"
                      Margin="20,0,20,30"
                      Height="31">
                <ComboBoxItem Content="User"/>
                <ComboBoxItem Content="Admin"/>
            </ComboBox>

            <Button Grid.Row="7" 
                    x:Name="btnLogin" 
                    Content="Войти" 
                    Width="140"
                    FontSize="16"
                    FontWeight="Bold"
                    Background="#FF00C000"
                    Foreground="White"
                    BorderThickness="0"
                    HorizontalAlignment="Center"
                    Margin="0,50,0,-44"
                    Click="BtnLogin_Click"/>
        </Grid>
    </Border>
</Window>