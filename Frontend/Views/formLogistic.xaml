<Window x:Class="Frontend.Views.formLogistic"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Frontend.Views"
        mc:Ignorable="d"
        Title="Логистика" 
        Height="800" Width="1620"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Левая панель - информация о доставке -->
        <StackPanel Grid.Column="0" Margin="10" Width="500">
            <!-- ID логистики -->
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <Label Content="ID логистики:" 
                       FontSize="14" 
                       FontWeight="SemiBold"
                       Width="150"/>
                <TextBox x:Name="txtID" 
                         FontSize="14"
                         FontWeight="SemiBold"
                         Width="300"
                         IsReadOnly="True"/>
            </StackPanel>

            <!-- Сотрудник -->
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <Label Content="Сотрудник:" 
                       FontSize="14" 
                       FontWeight="SemiBold"
                       Width="150"/>
                <ComboBox x:Name="cmbEmployee" 
                          FontSize="14"
                          FontWeight="SemiBold"
                          Width="300"
                          SelectionChanged="cmbEmployee_SelectionChanged"/>
            </StackPanel>

            <!-- Имя -->
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <Label Content="Имя:" 
                       FontSize="14" 
                       FontWeight="SemiBold"
                       Width="150"/>
                <TextBox x:Name="txtFirstName" 
                         FontSize="14"
                         FontWeight="SemiBold"
                         Width="300"/>
            </StackPanel>

            <!-- Фамилия -->
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <Label Content="Фамилия:" 
                       FontSize="14" 
                       FontWeight="SemiBold"
                       Width="150"/>
                <TextBox x:Name="txtLastName" 
                         FontSize="14"
                         FontWeight="SemiBold"
                         Width="300"/>
            </StackPanel>

            <!-- Адрес -->
            <StackPanel Margin="0,10">
                <Label Content="Адрес:" 
                       FontSize="14" 
                       FontWeight="SemiBold"/>
                <TextBox x:Name="txtAddress" 
                         FontSize="14"
                         FontWeight="SemiBold"
                         Height="80"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"/>
            </StackPanel>

            <!-- Контакт -->
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <Label Content="Контакт:" 
                       FontSize="14" 
                       FontWeight="SemiBold"
                       Width="150"/>
                <TextBox x:Name="txtContact" 
                         FontSize="14"
                         FontWeight="SemiBold"
                         Width="300"/>
            </StackPanel>

            <!-- Дата -->
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <Label Content="Дата:" 
                       FontSize="14" 
                       FontWeight="SemiBold"
                       Width="150"/>
                <TextBox x:Name="txtDate" 
                         FontSize="14"
                         FontWeight="SemiBold"
                         Width="300"/>
            </StackPanel>

            <!-- Поиск -->
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <Label Content="Поиск:" 
                       FontSize="14" 
                       FontWeight="SemiBold"
                       Width="150"/>
                <TextBox x:Name="txtSearch" 
                         FontSize="14"
                         FontWeight="SemiBold"
                         Width="300"
                         TextChanged="txtSearch_TextChanged"/>
            </StackPanel>

            <!-- Кнопки действий -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
                <Button x:Name="btnAdd" 
                        Content="Добавить" 
                        Width="100" Height="50"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Background="Lime"
                        Margin="5"
                        Click="btnAdd_Click"/>

                <Button x:Name="btnUpdate" 
                        Content="Изменить" 
                        Width="100" Height="50"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Background="Orange"
                        Margin="5"
                        Click="btnUpdate_Click"/>

                <Button x:Name="btnDelete" 
                        Content="Удалить" 
                        Width="100" Height="50"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Background="Red"
                        Foreground="White"
                        Margin="5"
                        Click="btnDelete_Click"/>

                <Button x:Name="btnClear" 
                        Content="Очистить" 
                        Width="100" Height="50"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Background="Purple"
                        Foreground="White"
                        Margin="5"
                        Click="btnClear_Click"/>
            </StackPanel>
        </StackPanel>

        <!-- Центральная панель - продукты -->
        <StackPanel Grid.Column="1" Margin="10">
            <!-- Поиск продукта -->
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <Label Content="Поиск:" 
                       FontSize="14" 
                       FontWeight="SemiBold"
                       Width="100"/>
                <TextBox x:Name="txtSearchProduct" 
                         FontSize="14"
                         FontWeight="SemiBold"
                         Width="300"
                         TextChanged="txtSearchProduct_TextChanged"/>
            </StackPanel>

            <!-- Название продукта -->
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <Label Content="Название:" 
                       FontSize="14" 
                       FontWeight="SemiBold"
                       Width="100"/>
                <TextBox x:Name="txtProductName" 
                         FontSize="14"
                         FontWeight="SemiBold"
                         Width="300"/>
            </StackPanel>

            <!-- Инвентарь -->
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <Label Content="Инвентарь:" 
                       FontSize="14" 
                       FontWeight="SemiBold"
                       Width="100"/>
                <TextBox x:Name="txtInventory" 
                         FontSize="14"
                         FontWeight="SemiBold"
                         Width="300"/>
            </StackPanel>

            <!-- Цена -->
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <Label Content="Цена:" 
                       FontSize="14" 
                       FontWeight="SemiBold"
                       Width="100"/>
                <TextBox x:Name="txtRate" 
                         FontSize="14"
                         FontWeight="SemiBold"
                         Width="300"/>
            </StackPanel>

            <!-- Количество -->
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <Label Content="Количество:" 
                       FontSize="14" 
                       FontWeight="SemiBold"
                       Width="100"/>
                <TextBox x:Name="txtQty" 
                         FontSize="14"
                         FontWeight="SemiBold"
                         Width="300"/>
            </StackPanel>

            <!-- Кнопка добавления продукта -->
            <Button x:Name="btnAddProduct" 
                    Content="Добавить" 
                    Width="100" Height="50"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Background="#FF00C0C0"
                    Foreground="White"
                    Margin="0,20,0,0"
                    Click="btnAddProduct_Click"/>
        </StackPanel>

        <!-- Правая панель - добавленные продукты -->
        <StackPanel Grid.Column="2" Margin="10">
            <!-- Таблица добавленных продуктов -->
            <DataGrid x:Name="dgvAddedProducts" 
                      Height="300"
                      AutoGenerateColumns="True"
                      CanUserAddRows="False"/>

            <!-- Итого -->
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <Label Content="Итого:" 
                       FontSize="14" 
                       FontWeight="SemiBold"
                       Width="100"/>
                <TextBox x:Name="txtTotal" 
                         FontSize="14"
                         FontWeight="SemiBold"
                         Width="300"
                         Text="0"/>
            </StackPanel>

            <!-- Описание -->
            <Label Content="Описание:" 
                   FontSize="14" 
                   FontWeight="SemiBold"
                   Margin="0,10,0,0"/>
            <TextBox x:Name="txtDescription" 
                     FontSize="14"
                     FontWeight="SemiBold"
                     Height="80"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Таблица логистики (внизу) -->
        <DataGrid Grid.ColumnSpan="3"
                  x:Name="dgvLogistic" 
                  Margin="20,564,0,10"
                  AutoGenerateColumns="True"
                  CanUserAddRows="False"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  MouseDoubleClick="dgvLogistic_MouseDoubleClick"/>
    </Grid>
</Window>