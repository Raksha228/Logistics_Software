<Window x:Class="Frontend.Views.formCategories"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Frontend.Views"
        mc:Ignorable="d"
Title="Категории" 
        Height="479" Width="1305"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Левая панель с полями ввода -->
        <StackPanel Grid.Column="0" Margin="10" Width="450">
            <!-- ID категории -->
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <Label Content="ID категории:" 
                       FontSize="14" 
                       FontWeight="SemiBold"
                       Width="120"/>
                <TextBox x:Name="txtCategoryID" 
                         FontSize="14"
                         FontWeight="SemiBold"
                         Width="300"
                         IsReadOnly="True"/>
            </StackPanel>

            <!-- Название -->
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <Label Content="Название:" 
                       FontSize="14" 
                       FontWeight="SemiBold"
                       Width="120"/>
                <TextBox x:Name="txtTitle" 
                         FontSize="14"
                         FontWeight="SemiBold"
                         Width="300"/>
            </StackPanel>

            <!-- Описание -->
            <StackPanel Margin="0,10">
                <Label Content="Описание:" 
                       FontSize="14" 
                       FontWeight="SemiBold"/>
                <TextBox x:Name="txtDescription" 
                         FontSize="14"
                         FontWeight="SemiBold"
                         Height="160"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"/>
            </StackPanel>

            <!-- Кнопки действий -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
                <Button x:Name="btnAdd" 
                        Content="Добавить" 
                        Width="100" Height="50"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Background="Lime"
                        Margin="5"
                        Click="btnAdd_Click"/>

                <Button x:Name="btnUpdate" 
                        Content="Изменить" 
                        Width="100" Height="50"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Background="Orange"
                        Margin="5"
                        Click="btnUpdate_Click"/>

                <Button x:Name="btnDelete" 
                        Content="Удалить" 
                        Width="100" Height="50"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Background="Red"
                        Foreground="White"
                        Margin="5"
                        Click="btnDelete_Click"/>

                <Button x:Name="btnClear" 
                        Content="Очистить" 
                        Width="100" Height="50"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Background="Purple"
                        Foreground="White"
                        Margin="5"
                        Click="btnClear_Click"/>
            </StackPanel>
        </StackPanel>

        <!-- Правая панель с таблицей и поиском -->
        <StackPanel Grid.Column="1" Margin="10">
            <!-- Поиск -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="Поиск:" 
                       FontSize="14" 
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"/>
                <TextBox x:Name="txtSearch" 
                         FontSize="14"
                         FontWeight="SemiBold"
                         Width="400"
                         Margin="10,0"
                         TextChanged="txtSearch_TextChanged"/>
            </StackPanel>

            <!-- Таблица категорий -->
            <DataGrid x:Name="dgvCategories" 
                      AutoGenerateColumns="True"
                      CanUserAddRows="False"
                      SelectionMode="Single"
                      SelectionUnit="FullRow"
                      IsReadOnly="True"
                      MouseDoubleClick="dgvCategories_MouseDoubleClick"
                      Height="390"/>
        </StackPanel>
    </Grid>
</Window>