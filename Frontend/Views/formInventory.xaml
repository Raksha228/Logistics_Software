<Window x:Class="Frontend.Views.formInventory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Frontend.Views"
        mc:Ignorable="d"
Title="Инвентаризация" 
        Height="535" Width="1189"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель управления -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10" HorizontalAlignment="Left">
            <Label Content="Категория:" 
                   FontSize="14" 
                   FontWeight="SemiBold"
                   VerticalAlignment="Center"
                   Margin="0,0,10,0"/>

            <ComboBox x:Name="cmbCategories" 
                      Width="438" 
                      Height="31"
                      FontSize="14"
                      FontWeight="SemiBold"
                      VerticalContentAlignment="Center"
                      SelectionChanged="cmbCategories_SelectionChanged"/>

            <Button x:Name="btnAll" 
                    Content="Показать все" 
                    Width="128" 
                    Height="47"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Background="#FF00C0C0"
                    Foreground="White"
                    BorderThickness="0"
                    Margin="20,0,0,0"
                    Click="btnAll_Click"/>
        </StackPanel>

        <!-- Таблица продуктов -->
        <DataGrid x:Name="dgvProducts" 
                  Grid.Row="1" 
                  Margin="12,0,12,12"
                  AutoGenerateColumns="True"
                  CanUserAddRows="False"
                  IsReadOnly="True"/>
    </Grid>
</Window>