<Window x:Class="Frontend.Views.formProducts"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Frontend.Views"
        mc:Ignorable="d"
        Title="Товары" 
        Height="600" Width="1380"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Левая панель - данные о товаре -->
        <StackPanel Grid.Column="0" Margin="10" Width="500">
            <!-- ID товара -->
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <Label Content="ID товара:" 
                       FontSize="14" 
                       FontWeight="SemiBold"
                       Width="120"/>
                <TextBox x:Name="txtID" 
                         FontSize="14"
                         FontWeight="SemiBold"
                         Width="320"
                         IsReadOnly="True"/>
            </StackPanel>

            <!-- Название -->
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <Label Content="Название:" 
                       FontSize="14" 
                       FontWeight="SemiBold"
                       Width="120"/>
                <TextBox x:Name="txtName" 
                         FontSize="14"
                         FontWeight="SemiBold"
                         Width="320"/>
            </StackPanel>

            <!-- Категория -->
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <Label Content="Категория:" 
                       FontSize="14" 
                       FontWeight="SemiBold"
                       Width="120"/>
                <ComboBox x:Name="cmbCategory" 
                          FontSize="14"
                          FontWeight="SemiBold"
                          Width="320"/>
            </StackPanel>

            <!-- Специальный номер -->
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <Label Content="Спец. номер:" 
                       FontSize="14" 
                       FontWeight="SemiBold"
                       Width="120"/>
                <TextBox x:Name="txtSpecialNumber" 
                         FontSize="14"
                         FontWeight="SemiBold"
                         Width="320"/>
            </StackPanel>

            <!-- Описание -->
            <StackPanel Margin="0,10">
                <Label Content="Описание:" 
                       FontSize="14" 
                       FontWeight="SemiBold"/>
                <TextBox x:Name="txtDescription" 
                         FontSize="14"
                         FontWeight="SemiBold"
                         Height="180"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"/>
            </StackPanel>

            <!-- Цена -->
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <Label Content="Цена:" 
                       FontSize="14" 
                       FontWeight="SemiBold"
                       Width="120"/>
                <TextBox x:Name="txtRate" 
                         FontSize="14"
                         FontWeight="SemiBold"
                         Width="320"/>
            </StackPanel>

            <!-- Кнопки действий -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
                <Button x:Name="btnAdd" 
                        Content="Добавить" 
                        Width="110" Height="55"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Background="Lime"
                        Margin="5"
                        Click="btnAdd_Click"/>

                <Button x:Name="btnUpdate" 
                        Content="Изменить" 
                        Width="110" Height="55"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Background="Orange"
                        Margin="5"
                        Click="btnUpdate_Click"/>

                <Button x:Name="btnDelete" 
                        Content="Удалить" 
                        Width="110" Height="55"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Background="Red"
                        Foreground="White"
                        Margin="5"
                        Click="btnDelete_Click"/>

                <Button x:Name="btnClear" 
                        Content="Очистить" 
                        Width="110" Height="55"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Background="Purple"
                        Foreground="White"
                        Margin="5"
                        Click="btnClear_Click"/>
            </StackPanel>
        </StackPanel>

        <!-- Правая панель - список товаров -->
        <StackPanel Grid.Column="1" Margin="10">
            <!-- Поиск -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="Поиск:" 
                       FontSize="14" 
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"/>
                <TextBox x:Name="txtSearch" 
                         FontSize="14"
                         FontWeight="SemiBold"
                         Width="400"
                         Margin="10,0"
                         TextChanged="txtSearch_TextChanged"/>
            </StackPanel>

            <!-- Таблица товаров -->
            <DataGrid x:Name="dgvProducts" 
                      AutoGenerateColumns="True"
                      CanUserAddRows="False"
                      SelectionMode="Single"
                      SelectionUnit="FullRow"
                      IsReadOnly="True"
                      MouseDoubleClick="dgvProducts_MouseDoubleClick"
                      Height="500"/>
        </StackPanel>
    </Grid>
</Window>