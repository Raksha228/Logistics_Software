<Window x:Class="Frontend.Views.formArchiveDeliveries"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Архив доставок"
        WindowStartupLocation="CenterScreen"
        Background="#23272F"
        Height="538" Width="1351"
        Loaded="Window_Loaded">

    <Window.Resources>
        <!-- Цвета и стили (повторяем концепцию) -->
        <Color x:Key="AccentColor">#20E3B2</Color>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        <SolidColorBrush x:Key="DarkBgBrush" Color="#23272F"/>
        <SolidColorBrush x:Key="LightBgBrush" Color="#2D323B"/>
        <SolidColorBrush x:Key="HintBrush" Color="#B0B8C1"/>
        <DropShadowEffect x:Key="MainShadow" BlurRadius="18" ShadowDepth="0" Color="#56000000" Opacity="0.3"/>

        <Style x:Key="AccentButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBrush}" />
            <Setter Property="Foreground" Value="#23272F" />
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="16,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Margin" Value="22,0,0,0"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="9" >
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True"/>
                        </Border>
                        <!--Simple hover effect-->
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1fc7a9"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#7000FFD5" BlurRadius="10" ShadowDepth="0" Opacity="0.22"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль ComboBox (минимализм, округлость, акцент) -->
        <Style x:Key="AccentComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource LightBgBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
        </Style>

        <!-- DataGrid стиль (тёмный, фирменный акцент для строки) -->
        <Style TargetType="DataGrid" x:Key="DarkDataGrid">
            <Setter Property="Background" Value="{StaticResource LightBgBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="RowBackground" Value="#23272F"/>
            <Setter Property="AlternatingRowBackground" Value="#28313D"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#333"/>
            <Setter Property="VerticalGridLinesBrush" Value="#23272F"/>
            <Setter Property="AutoGenerateColumns" Value="True"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="RowDetailsVisibilityMode" Value="VisibleWhenSelected"/>
            <Setter Property="RowHeight" Value="38"/>
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#252931"/>
                        <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                        <Setter Property="FontSize" Value="16"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Padding" Value="8,5"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="#20E3B2"/>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="DataGridCell">
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Padding" Value="4,0"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#2e4455"/>
                                <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Фильтр панель -->
        <Border Grid.Row="0" Background="{StaticResource LightBgBrush}" 
                CornerRadius="14" 
                Padding="28,14"
                Margin="20,18,20,12"
                Effect="{StaticResource MainShadow}">
            <DockPanel HorizontalAlignment="Left" VerticalAlignment="Center">
                <Label Content="Дата:" 
                       VerticalAlignment="Center"
                       Foreground="{StaticResource HintBrush}"
                       FontSize="15" 
                       FontWeight="SemiBold"
                       Padding="0"
                       Margin="0,0,14,0"/>
                <ComboBox x:Name="cmbDate" 
                          Style="{StaticResource AccentComboBox}"
                          SelectionChanged="cmbDate_SelectionChanged" Width="262"
                          >
                    <!-- Содержимое здесь временно оставлено примеру, как в исходнике -->
                    <ComboBoxItem Content="Покупка"/>
                    <ComboBoxItem Content="Продажа"/>
                </ComboBox>
                <Button x:Name="btnAll" 
                        Content="Показать все" 
                        Style="{StaticResource AccentButton}"
                        Click="btnAll_Click"/>
            </DockPanel>
        </Border>

        <!-- Таблица данных (карточка с тенью) -->
        <Border Grid.Row="1" 
                CornerRadius="20"
                Margin="22,0,22,18"
                Background="{StaticResource LightBgBrush}"
                Effect="{StaticResource MainShadow}">
            <DataGrid x:Name="dgvDeliveries"
                      Style="{StaticResource DarkDataGrid}"
                      Margin="2,0,2,2"
                      AutoGenerateColumns="True"
                      CanUserAddRows="False"
                      />
        </Border>
    </Grid>
</Window>