        </Style>-->

        <!-- Акцентная кнопка -->
        <Style x:Key="AccentButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBrush}" />
            <Setter Property="Foreground" Value="#23272F" />
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="2,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="135"/>
            <Setter Property="Margin" Value="22,0,0,0"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#13cfa2"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#20E3B2" BlurRadius="8" ShadowDepth="0" Opacity="0.17"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataGrid стиль -->
        <Style TargetType="DataGrid" x:Key="DarkDataGrid">
            <Setter Property="Background" Value="{StaticResource LightBgBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="RowBackground" Value="#23272F"/>
            <Setter Property="AlternatingRowBackground" Value="#28313D"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#333"/>
            <Setter Property="VerticalGridLinesBrush" Value="#23272F"/>
            <Setter Property="AutoGenerateColumns" Value="True"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="RowDetailsVisibilityMode" Value="VisibleWhenSelected"/>
            <Setter Property="RowHeight" Value="38"/>
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#252931"/>
                        <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                        <Setter Property="FontSize" Value="16"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Padding" Value="8,5"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="#20E3B2"/>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="DataGridCell">
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Padding" Value="4,0"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#2e4455"/>
                                <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Стиль label -->
        <Style x:Key="AccentLabel" TargetType="Label">
            <Setter Property="Foreground" Value="{StaticResource HintBrush}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0,0,12,0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель управления в карточке -->
        <Border Grid.Row="0" Background="{StaticResource LightBgBrush}" CornerRadius="14" Padding="32,14" Margin="18,20,18,12" Effect="{StaticResource MainShadow}">
            <DockPanel HorizontalAlignment="Left" VerticalAlignment="Center">
                <Label Content="Дата:" Style="{StaticResource AccentLabel}" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbDate"
                          Style="{StaticResource AccentComboBox}"
                          SelectionChanged="cmbDate_SelectionChanged" Width="277">
                    <ComboBoxItem Content="Закупка"/>
                    <ComboBoxItem Content="Продажа"/>
                </ComboBox>
                <Button x:Name="btnAll"
                        Content="Показать все"
                        Style="{StaticResource AccentButton}"
                        Margin="25,0,0,0"
                        Click="btnAll_Click"/>
                <Button x:Name="btnDelivered"
                        Content="Доставлено"
                        Style="{StaticResource AccentButton}"
                        Margin="18,0,0,0"
                        Click="btnDelivered_Click"/>
            </DockPanel>
        </Border>

        <!-- Таблица данных -->
        <Border Grid.Row="1"
                CornerRadius="20"
                Margin="18,0,18,18"
                Background="{StaticResource LightBgBrush}"
                Effect="{StaticResource MainShadow}">
            <DataGrid x:Name="dgvLogistic"
                      Style="{StaticResource DarkDataGrid}"
                      Margin="2"
                      AutoGenerateColumns="True"
                      CanUserAddRows="False"
                      SelectionMode="Single"
                      SelectionUnit="FullRow"
                      IsReadOnly="True"
                      MouseDoubleClick="dgvLogistic_MouseDoubleClick"/>
        </Border>
    </Grid>
</Window>
    
    
    
    
    
    
    
    
