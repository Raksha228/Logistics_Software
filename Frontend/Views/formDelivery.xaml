<Window x:Class="Frontend.Views.formDelivery"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Frontend.Views"
        mc:Ignorable="d"
Title="Доставки" 
        Height="538" Width="1350"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель управления -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10" HorizontalAlignment="Left">
            <Label Content="Дата:" 
                   FontSize="14" 
                   FontWeight="SemiBold"
                   VerticalAlignment="Center"
                   Margin="0,0,10,0"/>

            <ComboBox x:Name="cmbDate" 
                      Width="389" 
                      Height="31"
                      FontSize="14"
                      FontWeight="SemiBold"
                      VerticalContentAlignment="Center"
                      SelectionChanged="cmbDate_SelectionChanged">
                <ComboBoxItem Content="Закупка"/>
                <ComboBoxItem Content="Продажа"/>
            </ComboBox>

            <Button x:Name="btnAll" 
                    Content="Показать все" 
                    Width="132" 
                    Height="42"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Background="#FF00C0C0"
                    Foreground="White"
                    BorderThickness="0"
                    Margin="20,0,20,0"
                    Click="btnAll_Click"/>

            <Button x:Name="btnDelivered" 
                    Content="Доставлено" 
                    Width="132" 
                    Height="42"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Background="#FF00C0C0"
                    Foreground="White"
                    BorderThickness="0"
                    Click="btnDelivered_Click"/>
        </StackPanel>

        <!-- Таблица данных -->
        <DataGrid x:Name="dgvLogistic" 
                  Grid.Row="1" 
                  Margin="12,0,12,12"
                  AutoGenerateColumns="True"
                  CanUserAddRows="False"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  IsReadOnly="True"
                  MouseDoubleClick="dgvLogistic_MouseDoubleClick"/>
    </Grid>
</Window>
