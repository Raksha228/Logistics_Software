                                    <Path HorizontalAlignment="Center" VerticalAlignment="Center" Data="M 0 0 L 8 0 L 4 7 Z" Fill="{StaticResource AccentBrush}"/>
                                </ToggleButton>
                                <ContentPresenter x:Name="ContentSite"
