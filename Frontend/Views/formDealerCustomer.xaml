<Window x:Class="Frontend.Views.formDealerCustomer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Frontend.Views"
        mc:Ignorable="d"
Title="Поставщики и клиенты" 
        Height="564" Width="1340"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Левая панель с полями ввода -->
        <StackPanel Grid.Column="0" Margin="10" Width="520">
            <!-- ID -->
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <Label Content="ID поставщика/клиента:" 
                       FontSize="14" 
                       FontWeight="SemiBold"
                       Width="200"/>
                <TextBox x:Name="txtDeaCustID" 
                         FontSize="14"
                         FontWeight="SemiBold"
                         Width="300"
                         IsReadOnly="True"/>
            </StackPanel>

            <!-- Тип -->
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <Label Content="Тип:" 
                       FontSize="14" 
                       FontWeight="SemiBold"
                       Width="200"/>
                <ComboBox x:Name="cmbDeaCust" 
                          FontSize="14"
                          FontWeight="SemiBold"
                          Width="300">
                    <ComboBoxItem Content="Поставщик"/>
                    <ComboBoxItem Content="Клиент"/>
                </ComboBox>
            </StackPanel>

            <!-- Название -->
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <Label Content="Название:" 
                       FontSize="14" 
                       FontWeight="SemiBold"
                       Width="200"/>
                <TextBox x:Name="txtName" 
                         FontSize="14"
                         FontWeight="SemiBold"
                         Width="300"/>
            </StackPanel>

            <!-- Email -->
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <Label Content="Email:" 
                       FontSize="14" 
                       FontWeight="SemiBold"
                       Width="200"/>
                <TextBox x:Name="txtEmail" 
                         FontSize="14"
                         FontWeight="SemiBold"
                         Width="300"/>
            </StackPanel>

            <!-- Контакт -->
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <Label Content="Контакт:" 
                       FontSize="14" 
                       FontWeight="SemiBold"
                       Width="200"/>
                <TextBox x:Name="txtContact" 
                         FontSize="14"
                         FontWeight="SemiBold"
                         Width="300"/>
            </StackPanel>

            <!-- Адрес -->
            <StackPanel Margin="0,10">
                <Label Content="Адрес:" 
                       FontSize="14" 
                       FontWeight="SemiBold"/>
                <TextBox x:Name="txtAddress" 
                         FontSize="14"
                         FontWeight="SemiBold"
                         Height="150"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"/>
            </StackPanel>

            <!-- Кнопки действий -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
                <Button x:Name="btnAdd" 
                        Content="Добавить" 
                        Width="100" Height="50"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Background="Lime"
                        Margin="5"
                        Click="btnAdd_Click"/>

                <Button x:Name="btnUpdate" 
                        Content="Изменить" 
                        Width="100" Height="50"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Background="Orange"
                        Margin="5"
                        Click="btnUpdate_Click"/>

                <Button x:Name="btnDelete" 
                        Content="Удалить" 
                        Width="100" Height="50"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Background="Red"
                        Foreground="White"
                        Margin="5"
                        Click="btnDelete_Click"/>

                <Button x:Name="btnClear" 
                        Content="Очистить" 
                        Width="100" Height="50"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Background="Purple"
                        Foreground="White"
                        Margin="5"
                        Click="btnClear_Click"/>
            </StackPanel>
        </StackPanel>

        <!-- Правая панель с таблицей и поиском -->
        <StackPanel Grid.Column="1" Margin="10">
            <!-- Поиск -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="Поиск:" 
                       FontSize="14" 
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"/>
                <TextBox x:Name="txtSearch" 
                         FontSize="14"
                         FontWeight="SemiBold"
                         Width="400"
                         Margin="10,0"
                         TextChanged="txtSearch_TextChanged"/>
            </StackPanel>

            <!-- Таблица поставщиков/клиентов -->
            <DataGrid x:Name="dgvDeaCust" 
                      AutoGenerateColumns="True"
                      CanUserAddRows="False"
                      SelectionMode="Single"
                      SelectionUnit="FullRow"
                      IsReadOnly="True"
                      MouseDoubleClick="dgvDeaCust_MouseDoubleClick"
                      Height="469"/>
        </StackPanel>
    </Grid>
</Window>